<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.skymxc.demo.jsonoperate.MainActivity">

    <Button
        android:id="@+id/parser_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="解析json字符串"/>


    <Button
        android:id="@+id/list_to_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="list集合转为json"
        android:onClick="onClick"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/object_to_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="对象转为json"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
